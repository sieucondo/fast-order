<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:onClick="clickToScanQrCode"
    android:orientation="vertical"
    tools:context="com.android.fastorder.MainActivity">

    <ImageView
        android:layout_width="35mm"
        android:layout_height="35mm"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:textColor="@color/zxing_status_text"
        android:fontFamily="cursive"
        android:text="Fast Order"
        android:textStyle="bold"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:layout_gravity="center"
        android:src="@drawable/qrcode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Touch To Continue"
        android:textColor="@color/zxing_status_text"
        android:textSize="15dp"/>

</LinearLayout>