<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/imageProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imageProduct"
        android:text="Product Name"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtProductName"
        android:layout_alignBottom="@+id/imageProduct"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/btnAddToCart"
        android:textSize="17dp"
        android:text="Price: ..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtProductName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:onClick="clickToAddCart"
        android:background="@mipmap/ic_plus"
    />


</RelativeLayout>